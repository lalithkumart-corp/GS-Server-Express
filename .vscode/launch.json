    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "args": [
                "--experimental-modules",
                "--experimental-json-modules",
                "${workspaceFolder}/dist-server/bin/www.js"
            ],
            // "program": "${workspaceFolder}\\dist-server\\bin\\www.js",
            "console": "integratedTerminal",
            "preLaunchTask": "npm: build",
        }
    ]
}